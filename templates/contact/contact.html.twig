{% extends "base.html.twig" %}



{% block body %}

    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(our_form) }}
        <h1 class="card-title mt-2 ">Formulaire de Contact </h1>
    <div class="col-sm-12 mt-2">
        <div class="form-group">

            {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}


        </div>
        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="form-group">
            {{ form_row(our_form.subject, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

        </div>


        {{ form_end(our_form) }}
    </div>

    </div>

{% endblock %}
